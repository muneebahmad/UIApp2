<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <bitmap android:src="@drawable/dpad_key_bg" />
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#1e90ff" />
            <corners
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <bitmap android:src="@drawable/key_bgs" />

    </item>
</selector>