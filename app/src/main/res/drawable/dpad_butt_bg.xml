<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1eccff"
                android:endColor="#1eccff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#999999"
                />
            <corners
                android:radius="25sp"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#1e90ff" />
            <corners
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#bdbdbd"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#aaaaaa"
                />
            <corners
                android:radius="25sp"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>