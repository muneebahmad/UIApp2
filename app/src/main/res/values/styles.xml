<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ab_bg</item>
        <item name="colorPrimaryDark">@color/ab_bg</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@color/ab_bg</item>
    </style>

    <style name="DPADButts">
        <item name="android:layout_margin">5sp</item>
        <item name="android:background">@drawable/dpad_butt_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
